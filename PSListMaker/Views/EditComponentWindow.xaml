<Window x:Class="PSListMaker.Views.EditComponentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSListMaker.Views"
        mc:Ignorable="d"
        Title="EditComponentWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Старое наименование" Margin="0 0 10 5"/>
                <TextBlock x:Name="OldComponentName" Text="" Margin="0 0 10 5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Новое наименование" Margin="0 0 10 5"/>
                <TextBox x:Name="ComponentName" Width="150"/>
            </StackPanel>

            
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Отменить" />
            <Button Content="Изменить" />
        </StackPanel>
    </Grid>
</Window>
