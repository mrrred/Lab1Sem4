<Window x:Class="PSListMaker.ComponentsList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSListMaker"
        xmlns:localvm="clr-namespace:PSListMaker.ViewModels"
        d:DataContext="{d:DesignInstance localvm:ComponentsListViewModel}"
        mc:Ignorable="d"
        Title="Список компонентов" Height="300" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Добавить" Click="Add_Button_Click"></MenuItem>
            <MenuItem x:Name="Edit_Button" Header="Изменить" Click="Edit_Button_Click" IsEnabled="False"></MenuItem>
            <MenuItem Header="Отменить" IsEnabled="True" Click="Undo_Button_Click"></MenuItem>
            <MenuItem Header="Сохранить" IsEnabled="True" Click="Save_Button_Click"></MenuItem>
            <MenuItem x:Name="Delete_Button" Header="Удалить" Click="Delete_Button_Click" IsEnabled="False"></MenuItem>

        </Menu>

        <Separator Height="3" Padding="0 5 0 5" Grid.Row="1"/>

        <ListView x:Name="CompNameTypeList" Grid.Row="2" SelectionChanged="LixtBox_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="70" Header="Название" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Width="70" Header="Тип" DisplayMemberBinding="{Binding Type}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Наименование" Margin="0 0 10 0"></TextBlock>
                <TextBox x:Name="NameFilter" Width="100" TextChanged="NameFilter_TextChanged"></TextBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Тип" Margin="0 0 10 0"></TextBlock>
                <ComboBox x:Name="TypeFilter" Width="70" SelectedIndex="0" SelectionChanged="TypeFilter_Changed">
                    <TextBlock Text=""/>
                    <TextBlock Text="Product"/>
                    <TextBlock Text="Node"/>
                    <TextBlock Text="Detail"/>
                </ComboBox>
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
